# ▼ 게임 시작 시간 기록
start_time = pygame.time.get_ticks()
GAME_TIME_LIMIT = 30000  # 30초

while running:

    # ▼ 남은 시간 계산
    elapsed = pygame.time.get_ticks() - start_time
    remaining = max(0, (GAME_TIME_LIMIT - elapsed) // 1000)

    if remaining == 0 and not game_over:
        game_over = True
        print("TIME OVER!")

    ...
    # ▼ 남은 시간 표시
    time_text = font.render(f"Time: {remaining}", True, (0, 0, 0))
    screen.blit(time_text, (10, 30))
